<div>
   <h1>Pantalla para agregar productos</h1>

{{#if users.userRol}}
    <p>Bienvenido Usuario  {{users.mail}}</p>
    {{/if}}
    {{#if users.admin}}
    <p>Bienvenido Administrador  {{users.mail}}</p>
    {{/if}}
<button type:"button"><a href="/logout">Desconectarse</a></button>

   <form action="" method="post" enctype="multipart/form-data">
        <label>Nombre de producto: </label> <input name="title" type="text" required/>
        <label>Descripcion: </label> <input name="description" type="text" required/>
        <label>Precio: </label> <input name="price" type="number" required/>
        <label>Im√°gen</label> <input name="thumbnail" type="file" />
        <label>Cantidad: </label> <input name="stock" type="number" required/>
        <button type="submit">Agregar</button>
    </form>

    <h2>Eliminar Producto</h2>

    <form id="deleteForm">
        <label>ID del Producto:</label><input type="text" id="productId" name="productId" required>
        <button type="button" onclick="deleteProduct()">Eliminar Producto</button>
    </form>
    <div class="acomoda">
{{#each products.docs}}
    <div>
        <p>ID: {{this._id}}</p>
        <p>Producto: {{this.title}}</p>
        <p>Precio: {{this.price}}</p>
    </div>
    {{/each}}
    </div>
    <br />
    <br />
    {{#if products.hasPrevPage}}
    <button><a href={{products.prevLink}}>Pagina anterior</a></button>
    {{/if}}
    {{#if products.hasNextPage}}
    <button> <a href={{products.nextLink}}>Pagina Siguiente</a></button>
    {{/if}}
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
